# Blockchain Verification Configuration
# Add these variables to your .env file

# TRON Network Configuration
# Get your API key from: https://www.trongrid.io/
TRON_GRID_API_KEY=your_trongrid_api_key_here

# Ethereum Network Configuration  
# Get your project ID from: https://infura.io/
INFURA_PROJECT_ID=your_infura_project_id_here

# BSC Network Configuration (optional)
# Uses public RPC by default, but you can specify a custom one
BSC_RPC_URL=https://bsc-dataseed.binance.org/

# Example with actual values (replace with your keys):
# TRON_GRID_API_KEY=12345678-1234-1234-1234-123456789012
# INFURA_PROJECT_ID=abcdef123456789012345678901234567890abcd
